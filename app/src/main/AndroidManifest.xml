<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.artlib.smartsusu">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name=".SmartSusu"
        android:allowBackup="true"
        android:icon="@mipmap/smartsusuicon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/smartsusuicon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".DashboardActivity" />
        <activity
            android:name=".DepositMoneyActivity"
            android:label="Deposit Money" />
        <activity
            android:name=".JoinContributionGroupActivity"
            android:label="Contribution Group" />
        <activity
            android:name=".RequestForWithdrawalActivity"
            android:label="Withdrawal" />
        <activity
            android:name=".AccountSettingsActivity"
            android:label="Account Settings" />
        <activity
            android:name=".CheckAccountBalanceActivity"
            android:label="Account Balance" />
        <activity
            android:name=".RegisterActivity"
            android:label="Register" />
        <activity
            android:name=".AccountSetup"
            android:label="Account Setup" />
        <activity
            android:name=".ResetPasswordActivity"
            android:label="Reset Password" />

        <!-- <service -->
        <!-- android:name=".MyFirebaseMessagingService"> -->
